<div id="<%= dom_id candidate %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= candidate.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Position:</strong>
    <%= candidate.position %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Age:</strong>
    <%= candidate.age %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this candidate", candidate, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this candidate", edit_candidate_path(candidate), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
