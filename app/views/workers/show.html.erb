<p class="mt-2 m-3 ">
  <%= link_to 'Volver', workers_path, class: "py-2 px-4 bg-gray-500 text-white rounded-md hover:bg-gray-700" %>
</p>

<section class=" dark:bg-gray-800 flex justify-center items-center mt-20">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg dark:border dark:border-gray-700 dark:bg-gray-800">
    <div class="p-6 space-y-4">
      <div class="space-y-4">
        <div>
          <h1 class="text-2xl font-semibold"><%= @worker.fullname %></h1>
        </div>
        <div>
          <p class="text-gray-600 dark:text-gray-400">Identificador: <%= @worker.id %></p>
        </div>
        <div>
          <p class="text-gray-600 dark:text-gray-400">Edad: <%= @worker.age %></p>
        </div>
        <div>
          <p class="text-gray-600 dark:text-gray-400">Profesión: <%= @worker.profession %></p>
        </div>
        <div>
          <p class="text-gray-600 dark:text-gray-400">Otro dato: <%= @worker.details %></p>
        </div>
        <div>
          <%= link_to 'Eliminar', worker_path(@worker), class: "mt-4 py-2 px-4 bg-red-600 text-white rounded-md hover:bg-red-800", method: :delete, data: { turbo_confirm:'¿Seguro que quieres eliminar?',turbo_method: 'delete' } %>
          <%= link_to 'Editar', edit_worker_path(@worker), class: "py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-700" %>
        </div>
      </div>
    </div>
  </div>
</section>